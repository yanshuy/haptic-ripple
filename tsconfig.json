{
    "compilerOptions": {
        "target": "es2015",
        "module": "esnext",
        "lib": ["dom", "esnext"],
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
